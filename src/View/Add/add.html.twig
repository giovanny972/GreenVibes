{% extends 'layout.html.twig' %}

{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/add.css">
{% endblock %}

{% block content %}
<section class="add">
    <section class="add__header">
        <h2>Welcome</h1>
        <h6>Join us for more fun !</h6>
    </section>
    <form action="" method="POST">
    <section class="add__form">
        <p class="add__error">{{ errors|last }}</p>
        <div class="form-floating add__name">
            <input type="text" class="form-control" id="floatingInput" placeholder="name" name="name">
            <label for="floatingInput">Name</label>
        </div>  
        <div class="form-floating add__picture">
            <input type="text" class="form-control" id="floatingPicture" placeholder="url" name="picture">
            <label for="floatingPicture">Image</label>
        </div>
        <button class="btn btn-primary add__button" type="submit">Add</button>
    </section>
    </form>
</section>
{% endblock %}
